<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.backjeff.customviewexamples.MainActivity">

    <io.backjeff.customviewexamples.customview.CustomRadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <io.backjeff.customviewexamples.customview.CustomRadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Laaa"
            app:description="Description of item Laaa" />

        <io.backjeff.customviewexamples.customview.CustomRadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Leee"
            app:description="Description of item Leee" />

        <io.backjeff.customviewexamples.customview.CustomRadioButton
            android:id="@+id/radio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Liii"
            app:description="Description of item Liii" />

    </io.backjeff.customviewexamples.customview.CustomRadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>